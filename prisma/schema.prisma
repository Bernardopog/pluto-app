generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id   Int @id @default(autoincrement())
  name String
  email String @unique
  password String

  transactions Transaction[]
  budgets      Budget[]
  vaults       Vault[]
  vaultItems   VaultItem[]
  goals        Goal?
}

model Transaction {
  id            Int @id @default(autoincrement())
  name          String
  value         Int
  date          DateTime
  
  userId        Int
  user          User @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoryId    Int
  category      Budget @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}
model Budget {
  id            Int @id @default(autoincrement())
  name          String
  color         String
  limit         Int
  transactions  Transaction[]

  userId        Int
  user          User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
model Vault {
  id            Int @id @default(autoincrement())
  name          String
  targetPrice   Int
  icon          VaultIcons
  items         VaultItem[]

  userId        Int
  user          User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
enum VaultIcons {
  plane
  piggy
  car
}
model VaultItem {
  id            Int @id @default(autoincrement())
  name          String
  value         Int

  vaultId       Int
  vault         Vault @relation(fields: [vaultId], references: [id], onDelete: Cascade)

  userId        Int
  user          User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum GoalProgress {
  balance
  vault
}

model Goal {
  userId        Int @unique
  user          User @relation(fields: [userId], references: [id], onDelete: Cascade)

  name          String
  targetAmount  Int
  deadline      DateTime?
  progress      GoalProgress
  assignedVault Int?
  completed     Boolean @default(false)
}